<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/home_tab_pressed_color"
        android:layout_height="64dp"
        android:id="@+id/rlTop"
        >
        <ImageView
            android:id="@+id/personal_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/navigation_return"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:layout_centerInParent="true"
            android:text="帖子详情"
            />

        <ImageView
            android:id="@+id/personal_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/nav_more"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/srlReflesh"
        android:layout_below="@+id/rlTop"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nestedScrollView"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                       android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="@dimen/dip12"
                        android:paddingLeft="12dp"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/circle_head"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_gravity="left"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon"
                            android:layout_marginRight="10dp"
                            app:riv_oval="true"
                            app:riv_tile_mode="clamp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/day_textColor"
                                android:textSize="15sp"
                                android:text="李娜"
                                android:paddingTop="8dp"
                                />
                            <TextView
                                android:id="@+id/authInfo"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/day_edit_hit_color"
                                android:textSize="11sp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            />
                        <TextView
                            android:id="@+id/attention"
                            android:layout_width="50dp"
                            android:layout_height="24dp"
                            android:text="关注"
                            android:paddingLeft="6dp"
                            android:textColor="@color/white"
                            android:background="@drawable/concern"
                            android:textSize="12sp"
                            android:drawableLeft="@mipmap/icon_follow"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/time"
                            android:text="adsada"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/day_edit_hit_color"
                            android:textSize="11sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip12"
                        android:layout_marginRight="@dimen/dip12"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        android:textColor="@color/day_edit_color"
                        />
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="@dimen/dip12"
                        android:layout_marginRight="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        />
                    <android.support.v7.widget.RecyclerView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rvCallBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="@dimen/dip12"
                        android:background="#f1f1f1"
                        ></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:background="@color/white"
        >
        <EditText
            android:layout_width="0dp"
            android:hint="说点什么吧。。。"
            android:textSize="15sp"
            android:id="@+id/etCallBackTieZi"
            android:background="@null"
            android:layout_weight="8"
            android:textColor="@color/day_edit_color"
            android:focusable="true"
            android:gravity="center_vertical"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_height="match_parent"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ivSendTiezi"
            android:src="@mipmap/icon_zan"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvSendTieZi"
            android:text="发送"
            android:layout_gravity="center_vertical"
            android:textColor="@color/day_edit_color"
            android:visibility="gone"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
